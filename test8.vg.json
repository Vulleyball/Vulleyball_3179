{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url": "https://raw.githubusercontent.com/Vulleyball/assignment_test/main/cancer_new2.csv"
    },
    "vconcat": [{
            
            "width": 600,
            "height": 400,
            "title": "Breast cancer deaths over the years",
            "projection": {
                "type": "equalEarth"
            },
            "layer": [{
                    "data": {
                        "url": "https://raw.githubusercontent.com/KaneSec/vega_lite/main/2_symbol_map/js/ne_110m_admin_0_countries.topojson",

                        "format": {
                            "type": "topojson",
                            "feature": "ne_110m_admin_0_countries"
                        }
                    },
                    "mark": {
                        "type": "geoshape",
                        "fill": "lightgray",
                        "stroke": "white"
                    }
                },
                {
                    "transform": [{
                        "filter": {
                            "param": "time_brush"
                        }
                    }],
                    "encoding": {
                        "longitude": {
                            "field": "Longitude",
                            "type": "quantitative"
                        },
                        "latitude": {
                            "field": "Latitude",
                            "type": "quantitative"
                        },
                        "color": {
                            "field": "Breast",
                            "type": "quantitative",
                            "scale": {
                                "type": "threshold",
                                "domain": [50, 100, 500, 1000],
                                "range": ["#fdbe85", "#fd8d3c", "#e6550d", "#bd0026", "#7f0000"]
                            }
                        },
                        "tooltip": [
                            {
                                "field": "Breast",
                                "type": "quantitative"
                            },
                            {
                                "field": "Country",
                                "type": "nominal"
                            }
                        ]
                    },
                    "layer": [{
                            "mark": {
                                "type": "circle",
                                "opacity": 0.4,
                                "size": 15
                            }
                        },
                        {
                            "transform": [{
                                    "window": [{
                                        "op": "rank",
                                        "as": "ranking"
                                    }],
                                    "sort": [{
                                        "field": "Breast",
                                        "order": "descending"
                                    }]
                                },
                                {
                                    "filter": "datum.ranking == 1"
                                },
                                {
                                    "calculate": "'most cancer deaths: ' + datum['Country']",
                                    "as": "text_annotation"
                                }
                            ],
                            "mark": {
                                "type": "text",
                                "align": "left",
                                "dx": 4
                            },
                            "encoding": {
                                "text": {
                                    "field": "text_annotation"
                                }
                            }
                        }
                    ]
                }
            ]
        },
        {"hconcat":[{
            "width": 250,
            "height": 150,
            "mark": "line",
            "title": {"text": "Use this line chart to filter"},
            "params": [{
                "name": "time_brush",
                "select": {
                    "type": "interval",
                    "encodings": ["x"]
                }
            }],
            "encoding": {
                "x": {
                    "field": "Year",
                    "timeUnit": "year",
                    "axis": {
                        "title": "",
                        "format": "%Y"
                    }
                },
                "y": {
                    "aggregate": "count",
                    "axis": {
                        "tickCount": 3,
                        "grid": false
                    },
                    "title": "Count"
                }
            }
        },
        {
        "width": 250,
        "height": 150,
        "mark": "bar",
        "transform": [{"filter":{"param": "time_brush"}}],
        "encoding": {
          "y": {"type": "nominal", "field": "Continent", "title": null},
          "x": {"field": "Lung", "type": "quantitative","aggregate": "sum"}}}
    ]}],
    "config": {
        "title": {
            "font": "sans-serif",
            "fontSize": 14
        },
        "legend": {"orient": "top", 
            "layout": {"top":{"anchor": "middle"}}}
    }
}